{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "lib": [
      "es5",
      "dom",
      "esnext",
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "allowJs": false,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "*": [
        "*",
        "src/*",
      ]
    },
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "example/**/*",
    "scripts/**/*",
    "dist/**/*",
    "es/**/*",
    "lib/**/*"
  ]
}
